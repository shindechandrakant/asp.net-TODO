@model Todo.Models.ViewModels.TodoViewModel;

<table>
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Name</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var t in Model.TodoList)
    {
        <tr>
            <td class="todos-column" scope="row">@t.Id</td>
            <td class="todos-column" scope="row">@t.Name</td>
            <td class="buttons-column">
                <input id="delete" type="submit" value="Delete"
                       onClick="deleteTodo(@t.Id)"
                />
                <input id="update" type="submit" value="Update"
                          onClick="populateForm(@t.Id)"
                />
            </td>
        </tr>
    }
    </tbody>
</table>

<script src="~/wwwroot/js/site.js" asp-append-version="true"></script>